/* Fonts */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&family=JetBrains+Mono:wght@700&display=swap');

/* Paleta */
:root {
  --bg: #0B0F14;
  --card: #0F172A;
  --fg: #E5E7EB;
  --cyan: #06B6D4;
  --cyan-hover: #0891B2;
  --violet: #8B5CF6;
  --blue: #3B82F6;
  /* Gradiente único para branding e role */
  --brand-gradient: linear-gradient(120deg, #06B6D4, #8B5CF6);
}

html { scroll-behavior: smooth; }
body {
  margin: 0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', Arial, sans-serif;
  background: var(--bg);
  color: var(--fg);
}

/* Utilitários de estilo */
.mono { font-family: 'JetBrains Mono', monospace; font-weight: 700; }
.gradient {
  background: var(--brand-gradient);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  color: transparent;
  display: inline-block;
}

/* Layout base */
.container { max-width: 1120px; margin: 0 auto; padding: 0 20px; }
.hide { display: none; }

/* Navbar */
.nav {
  position: sticky; top: 0; z-index: 20;
  backdrop-filter: blur(8px);
  background: rgba(11, 15, 20, 0.75);
  border-bottom: 1px solid rgba(229,231,235,0.06);
}
.nav-row { display: flex; align-items: center; justify-content: space-between; height: 64px; }
.brand { font-family: 'JetBrains Mono', monospace; font-weight: 700; font-size: 16px; letter-spacing: .02em; }
.brand .gradient { background: var(--brand-gradient); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; color: transparent; display: inline-block; text-transform: uppercase; }
.nav-links { display: flex; gap: 18px; align-items: center; }
.nav-links a { color: var(--fg); text-decoration: none; font-weight: 600; font-size: 14px; opacity: .9; border-radius: 8px; padding: 6px 8px; transition: all .2s ease; }
/* Hover do menu com gradiente no texto */
.nav-links a:hover { background: var(--brand-gradient); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; color: transparent; box-shadow: 0 0 0 3px rgba(6,182,212,.10) inset; }
.toggle { border: 1px solid rgba(229,231,235,0.08); background: var(--card); color: var(--fg); border-radius: 8px; padding: 8px 10px; cursor: pointer; }

/* Hero */
.hero { padding: 80px 0; }
@media (min-width: 768px) { .hero { padding: 110px 0; } }
.hero-grid { display: grid; grid-template-columns: 1fr; gap: 40px; align-items: center; }
@media (min-width: 768px) { .hero-grid { grid-template-columns: 1.1fr 0.9fr; gap: 56px; } }
.h-tag { font-size: 16px; letter-spacing: .02em; margin-bottom: 6px; text-transform: uppercase; }
.h-title { font-family: 'Inter', sans-serif; font-weight: 800; font-size: 42px; line-height: 1.15; margin: 10px 0 8px; }
@media (min-width: 768px) { .h-title { font-size: 56px; } }
.h-desc { color: #cbd5e1; font-size: 18px; line-height: 1.7; max-width: 60ch; }

.actions { display: flex; flex-wrap: wrap; gap: 12px 16px; align-items: center; margin-top: 18px; }
.btn { display: inline-flex; align-items: center; gap: 8px; padding: 10px 16px; font-weight: 700; border-radius: 10px; border: 0; cursor: pointer; text-decoration: none; transition: all .2s ease; background-clip: padding-box; }
/* Botão de download com gradiente na base e feedback de interação no hover/focus */
.btn-cyan { background: var(--brand-gradient); color: #0B0F14; box-shadow: 0 4px 14px rgba(6,182,212,.18); border: 0; background-clip: padding-box; }
.btn-cyan:hover { transform: translateY(-1px); box-shadow: 0 8px 24px rgba(6,182,212,.28); filter: saturate(1.06); }
.btn-cyan:active { transform: translateY(0); box-shadow: 0 4px 14px rgba(6,182,212,.18); }
.btn-cyan:focus-visible { outline: none; box-shadow: 0 0 0 3px rgba(6,182,212,.35); }

.icon-link { display: inline-flex; align-items: center; justify-content: center; width: 44px; height: 44px; border-radius: 999px; border: 1px solid rgba(229,231,235,0.08); background: var(--card); color: var(--fg); transition: all .2s ease; }
/* Hover dos ícones com gradiente no background e contraste no ícone */
.icon-link:hover { border-color: transparent; background: var(--brand-gradient); color: #0B0F14; box-shadow: 0 0 0 3px rgba(6,182,212,.15) inset; }
.icon { width: 20px; height: 20px; display: block; }

/* Chips (padrão igual aos ícones) */
.chips { display: flex; flex-wrap: wrap; gap: 10px; margin-top: 16px; }
.chip { border: 1px solid rgba(229,231,235,0.08); color: var(--fg); background: var(--card); padding: 10px 14px; border-radius: 999px; font-weight: 600; font-size: 12px; transition: all .2s ease; }
.chip:hover { border-color: transparent; color: #0B0F14; background: var(--brand-gradient); box-shadow: 0 0 0 3px rgba(6,182,212,.15) inset; }

/* Avatar */
.avatar-wrap { position: relative; width: 260px; height: 260px; margin: 0 auto; }
@media (min-width: 768px) { .avatar-wrap { width: 320px; height: 320px; margin: 0 0 0 auto; } }
/* Anel com gradiente cônico rotacionando */
.avatar-ring { position: absolute; inset: 0; border-radius: 999px; background: conic-gradient(from 0deg, #06B6D4, #8B5CF6, #06B6D4); animation: spin 12s linear infinite; }
/* Máscara para virar anel (recorta o miolo) */
.avatar-ring { -webkit-mask: radial-gradient(farthest-side, transparent calc(100% - 6px), #000 0); mask: radial-gradient(farthest-side, transparent calc(100% - 6px), #000 0); opacity: .9; }
.avatar-bg { position: absolute; inset: 0; border-radius: 999px; background: radial-gradient(120px 120px at 50% 40%, rgba(6,182,212,.25), transparent 60%); filter: blur(10px); }
.avatar-mask { position: relative; width: 100%; height: 100%; border-radius: 999px; overflow: hidden; }
.avatar-img { display: block; width: 100%; height: 100%; object-fit: cover; object-position: 50% 40%; }

@keyframes spin { from { transform: rotate(0deg);} to { transform: rotate(360deg);} }

/* Sections */
.section { padding: 72px 0; border-top: 1px solid rgba(229,231,235,0.06); background: transparent; }
.section h2 { font-family: 'Inter', sans-serif; font-weight: 800; font-size: 28px; margin-bottom: 14px; color: var(--fg); }
.section p { color: #cbd5e1; }

/* Footer */
.footer { padding: 32px 0; border-top: 1px solid rgba(229,231,235,0.06); color: #94a3b8; text-align: center; }
